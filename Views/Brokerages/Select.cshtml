@model Lab04.Models.ViewModels.BrokerageViewModel 
@{
    ViewData["Title"] = "Select";
    var _id = "0";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Title
            </th>
            <th>
               Fees
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    
        @foreach (var item in Model.Brokerages) {
            string selectedRow = "";
    
            {
                selectedRow = "success";
            }   
    
            <tr class=@selectedRow>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                   
       
         
                </td>
                <td>
                    <a asp-action="Select" asp-route-id = "@item.Id">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                  
                    
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Subscriptions != null)
{
    <h3>
      Subscribers to the brokerages
    </h3>
    <table class="table">
        <tr>
            @if (Model.Subscriptions.Count() > 0)
            {
                <th> Client-Name </th>
                <th> Broker Title</th>
            }
            else
            {
                <th> No record exist </th>
            }
        </tr>
        @foreach(var item01 in Model.Subscriptions){
                       
                        <tr>
               <td>
                    @Html.DisplayFor(modelItem => item01.Client.FirstName)</td>
                    <td>  @Html.DisplayFor(modelItem => item01.BrokerageId)</td>
                
                    </tr>            
                           
        }
    </table>
}